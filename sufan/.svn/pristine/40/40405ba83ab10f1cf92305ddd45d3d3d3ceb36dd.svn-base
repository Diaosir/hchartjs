
html,
body {
  font-size: 10px;
  background: #e5ebf4;
  font-family: 'Open Sans Microsoft YaHei', sans-serif;
}
body {
  margin: 0;
}
* {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;   
  padding: 0;
  margin: 0;
}
h1.head-title {
  position: relative;
  margin: 0 auto 15px;
  width: auto;
  padding-bottom: 15px;
  font-size: 4.1rem;
  font-weight: 300;
  letter-spacing: -0.15rem;
}
h1.head-title:after {
  content: "";
  position: absolute;
  bottom: 2px;
  left: 0;
  height: 2px;
  width: 100%;
  background: #bf616a;
  background: -webkit-linear-gradient(left, transparent 0%, #bf616a 50%, transparent 100%);
  background: linear-gradient(left, transparent 0%, #bf616a 50%, transparent 100%);
}
h1.head-title span:nth-of-type(1) {
  color: #7bc8a4;
}
h1.head-title span:nth-of-type(2) {
  color: yellow;
}
h1.head-title span:nth-of-type(3) {
  color: #ff005a;
}
h1.head-title span:nth-of-type(4) {
  color: #00d2ff;
}
h1.head-title span:nth-of-type(5) {
  color: #00ff8a;
}
header {
  width: 100%;
  background: #2b303b;
  text-align: center;
  padding: 34px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
}
header h1 {
  color: #c0c5ce;
}
header p {
  color: #96b5b4;
  margin-bottom: 12px;
  font-weight: 400;
  font-size: 1.4em
}
.color-palette {
  position: relative;
  padding:20px;
  width: 90%;
  min-width: 1200px;
  max-width: 1400px;
  margin: 0 auto;
  margin-top: 200px;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ffffff), to(#e5ebf4));
  background: -webkit-linear-gradient(top, #e5ebf4, #ffffff);
  background: -o-linear-gradient(top, #e5ebf4, #ffffff);
  background-color: #fff;
  background-size: 100% 100px;
  background-repeat: no-repeat;
  border: 2px solid white;
  box-shadow: 0 0 14px #bec9d8;
}
@media only screen and (min-width: 530px) and (max-width: 768px) {
  .color-palette {
    width: 90%;
  }
}
@media only screen and (max-width: 529px) {
  .color-palette {
    width: 96%;
  }
}
.color-palette:before {
  content: "";
  position: absolute;
  z-index: -1;
  width: 96%;
  bottom: 0;
  height: 20px;
  left: 2%;
  padding-bottom: 0px;
  border-bottom: 2px solid red;
  border-radius: 50%;
  box-shadow: 0 0 0px 3px #bbb, 0 0 0px 4px #eee, 0 0 0px 6px #fff, 0 0 32px #101215;
}

