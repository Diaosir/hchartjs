/* Common style */
.grid {
  width: 300px;
  margin: 0 auto;
  -webkit-transition: border 0.3s;
  transition: border 0.3s;
}
.grid a {
  display: inline-block;
  width: 100%;
  color: #333;
}

.grid figure {
  position: relative;
  overflow: hidden;
  background: #333;
}

.grid figure img {
  position: relative;
  display: block;
  width: 100%;
  opacity: 0.7;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.grid figcaption {
  position: absolute;
  top: 0;
  z-index: 11;
  padding: 10px;
  width: 100%;
  height: 100%;
  text-align: center;
}

.grid figcaption h2 {
  margin: 0 0 20px 0;
  color: #3498db;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 300;
  font-size: 20px;
  -webkit-transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
}

.grid figcaption p {
  padding: 0 20px;
  color: #aaa;
  font-weight: 300;
  font-size: 15px;
  -webkit-transition: opacity 0.3s, -webkit-transform 0.3s;
  transition: opacity 0.3s, transform 0.3s;
}

.grid figcaption h2,
.grid figcaption p {
  -webkit-transform: translateY(50px);
  transform: translateY(50px);
}

.grid figure button {
  position: absolute;
  padding: 10px 20px;
  border: none;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: normal;
  font-size: 15px;
  -webkit-transition: opacity 0.3s, -webkit-transform 0.3s;
  transition: opacity 0.3s, transform 0.3s;
}
.grid button{
  outline-style: none;
}
.demo-1.grid button{
  background: #3498db;
}
.demo-2.grid button{
  background: #e74c3c;
}
.demo-3.grid button{
  background: #52be7f;
}
.grid figcaption,
.grid figcaption h2,
.grid figcaption p,
.grid figure button {
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

/* Style for SVG */
.grid svg {
  position: absolute;
  top: -1px; /* fixes rendering issue in FF */
  z-index: 10;
  width: 100%;
  height: 100%;
}
.grid{
  border: 2px solid #fff;
}
.grid svg path {
  fill: #fff;
}
.demo-1.grid:hover svg path {
  fill: #3498db;
}
.demo-2.grid:hover svg path {
  fill: #e74c3c;
}
.demo-3.grid:hover svg path {
  fill: #52be7f;
}
