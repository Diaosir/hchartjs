/*card*/
.transition {
  transition: .3s cubic-bezier(.3, 0, 0, 1.3)
}

.row:before,
.row:after {
    content: " ";
    display: table;
}
.row:after {
    clear: both;
}
.row~.row{
  margin-top: 20px;
}
.col {
